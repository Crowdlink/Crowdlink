.col-md-9{"ng-show" => "view=='general'"}
  %h3 Account Information
  .panel.panel-default
    %table.table
      %tr
        %th Username
        %td{"ng-bind" => "acc_user.username"}
      %tr
        %th Primary Email
        %td
          {[{acc_user.primary_email.address}]}
          %span.label{"ng-class" => "{true: 'label-success', false: 'label-danger'}[acc_user.primary_email.verified]"}
            %span{"ng-show" => "acc_user.primary_email.verified"} Verified
            %span{"ng-hide" => "acc_user.primary_email.verified"} Un-Verified
      %tr{"ng-show" => "acc_user.gh_linked"}
        %th Github Account
        %td
          {[{acc_user.gh.login}]} {[{acc_user.gh_token}]}
