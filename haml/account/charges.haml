.col-md-9{"ng-controller" => "chargeController", "ng-show" => "view=='charges'", style: "padding:30px;"}
  %div{"ng-show" => "charges"}
    %h4 Charges
    %table.table.table-hover
      %tr
        %th Amount
        %th Date
        %th Card
        %th Status
        %th
      %tbody{"ng-repeat" => "charge in charges"}
        %tr.clickable{"ng-class" => "{1: 'success', 0: 'warning'}[charge._status]", "ng-click" => "charge.details=!charge.details"}
          %td
            %i.fa.fa-dollar
            {[{ charge.amount/100 }]}
          %td
            %i.fa.fa-calendar
            {[{ charge.created.$date | date:'short' }]}
          %td.mono
            %i.fa.fa-credit-card
            **** **** **** {[{ charge.last_four }]}
          %td
            {[{ charge.status }]}
          %td
            %i.fa{"ng-class" => "{true: 'fa-caret-up', false: 'fa-caret-down'}[charge.details]"}
        %tr{"ng-show" => "charge.details"}
          %td{colspan: "5"} Look at all the details
  %h4{"ng-hide" => "charges"} No charges to show.
